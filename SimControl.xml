            <interactionClass>
                <name>Stop</name>
                <sharing>PublishSubscribe</sharing>
                <transportation>HLAreliable</transportation>
                <order>Receive</order>
                <semantics>Interaction to request simulations stop execution.  This is different from a pause.</semantics>
            </interactionClass>
            <interactionClass>
                <name>Pause</name>
                <sharing>PublishSubscribe</sharing>
                <transportation>HLAreliable</transportation>
